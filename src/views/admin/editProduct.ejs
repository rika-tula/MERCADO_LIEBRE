<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Editando: ' + product.name }) %>

	<body>
		<!-- Header -->
		<%- include('../partials/headerNavbar') %>
			<!-- /Header -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Estás editando: <i>
								<%= product.name %>
							</i></h2>
					</div>
				</div>
				<div class="col-12">
					<form action="/admin/editar-producto/<%= product.id %>?_method=PUT" method="post"
						enctype="multipart/form-data">
						<div class="row product-detail">
							<div class="col-12 col-md-6">
								<label for="name" class="form-label">Nombre del producto:</label>
								<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok"
									class="form-input" value="<%= product.name %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="price" class="form-label">Precio del producto:</label>
								<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input"
									value="<%= product.price %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="discount" class="form-label">Descuento:</label>
								<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input"
									value="<%= product.discount %>">
							</div>
							<div class="col-12 col-md-6">
								<label for="category" class="form-label">Categoría:</label>
								<select name="category" id="category" class="form-input">
									<option value="">Elegí</option>
									<option <%=product.category==='in-sale' ? 'selected' : null %> value="in-sale">En
										oferta
									</option>
									<option <%=product.category==='visited' ? 'selected' : null %> value="visited"
										>Últimos
										agregados</option>
								</select>
							</div>
							<div class="col-12">
								<label for="description" class="form-label">Descipción:</label>
								<textarea name="description" id="description"
									class="form-input"><%= product.description %></textarea>
							</div>
							<div class="custom-file col-6">
								<label for="customFile" class="form-label">Seleccionar Archivo:</label>
								<input type="file" name="img" class="custom-file-input" id="customFile">
							</div>
							<div class="col-3">
								<button type="submit" class="buy-now-button">Guardar producto</button>
							</div>
							<div class="col-3">
								<a href="/" type="submit" class="buy-now-button" style="background-color: gray;">Cancelar</a>
							</div>
						</div>
					</form>
				</div>
			</div>

			</div>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('../partials/footer') %>
				<!-- /footer -->
	</body>

</html>